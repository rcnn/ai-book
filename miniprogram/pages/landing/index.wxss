.landing-page {
  min-height: 100vh;
  background-color: #0F172A;
  display: flex;
  flex-direction: column;
  color: #E2E8F0;
}

.hero-section {
  position: relative;
  height: 560rpx;
  border-bottom-left-radius: 48rpx;
  border-bottom-right-radius: 48rpx;
  overflow: hidden;
}

.hero-image {
  width: 100%;
  height: 100%;
  opacity: 0.65;
}

.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(15, 23, 42, 0.9) 0%, rgba(30, 41, 59, 0.7) 100%);
}

.hero-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 86%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.hero-pill {
  align-self: flex-start;
  padding: 12rpx 28rpx;
  border-radius: 999rpx;
  background: rgba(148, 163, 184, 0.15);
  font-size: 22rpx;
  letter-spacing: 2rpx;
}

.hero-title {
  font-size: 56rpx;
  font-weight: 700;
  line-height: 1.3;
  color: #F8FAFC;
}

.hero-subtitle {
  font-size: 28rpx;
  color: rgba(226, 232, 240, 0.85);
}

.hero-button {
  width: 280rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #6366F1, #8B5CF6);
  color: #F8FAFC;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 12rpx;
  box-shadow: 0 20rpx 45rpx rgba(99, 102, 241, 0.35);
}

.featured-section {
  padding: 56rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.section-header {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: 700;
}

.section-subtitle {
  font-size: 26rpx;
  color: rgba(148, 163, 184, 0.8);
}

.domain-scroll {
  white-space: nowrap;
  display: flex;
  gap: 24rpx;
  padding-bottom: 8rpx;
}

.domain-card {
  display: inline-flex;
  flex-direction: column;
  width: 320rpx;
  background: rgba(15, 23, 42, 0.65);
  border-radius: 28rpx;
  overflow: hidden;
  border: 1rpx solid rgba(99, 102, 241, 0.18);
  box-shadow: 0 24rpx 45rpx rgba(15, 23, 42, 0.35);
}

.domain-cover {
  width: 100%;
  height: 200rpx;
}

.domain-content {
  padding: 28rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.domain-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #F8FAFC;
}

.domain-description {
  font-size: 24rpx;
  color: rgba(148, 163, 184, 0.85);
  line-height: 1.6;
}

.highlights-section {
  padding: 0 40rpx 56rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.highlight-card {
  background: rgba(30, 41, 59, 0.85);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  border: 1rpx solid rgba(99, 102, 241, 0.15);
}

.highlight-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #E0E7FF;
}

.highlight-text {
  font-size: 24rpx;
  line-height: 1.7;
  color: rgba(148, 163, 184, 0.85);
}
