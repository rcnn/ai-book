.library-page {
  min-height: 100vh;
  background: #0B1220;
  padding: 40rpx 28rpx 120rpx;
  color: #E2E8F0;
}

.search-area {
  padding-bottom: 24rpx;
}

.search-box {
  display: flex;
  align-items: center;
  gap: 20rpx;
  background: rgba(30, 41, 59, 0.8);
  border-radius: 999rpx;
  padding: 18rpx 28rpx;
  border: 1rpx solid rgba(99, 102, 241, 0.15);
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.7;
}

.search-input {
  flex: 1;
  color: #F8FAFC;
  font-size: 28rpx;
}

.search-placeholder {
  color: rgba(148, 163, 184, 0.7);
}

.notice-card {
  margin-top: 20rpx;
  background: linear-gradient(135deg, rgba(80, 80, 250, 0.18), rgba(99, 102, 241, 0.15));
  border-radius: 28rpx;
  padding: 28rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  border: 1rpx solid rgba(99, 102, 241, 0.2);
}

.notice-badge {
  align-self: flex-start;
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(99, 102, 241, 0.25);
  color: #E0E7FF;
  font-size: 22rpx;
}

.notice-title {
  font-size: 30rpx;
  font-weight: 600;
}

.notice-text {
  font-size: 24rpx;
  color: rgba(148, 163, 184, 0.85);
  line-height: 1.6;
}

.book-list {
  margin-top: 32rpx;
  max-height: calc(100vh - 260rpx);
}

.book-card {
  position: relative;
  display: flex;
  gap: 24rpx;
  background: rgba(15, 23, 42, 0.75);
  border-radius: 28rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(99, 102, 241, 0.12);
  margin-bottom: 24rpx;
}

.book-cover {
  width: 200rpx;
  height: 280rpx;
  border-radius: 18rpx;
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.book-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #F8FAFC;
}

.book-author {
  font-size: 26rpx;
  color: rgba(148, 163, 184, 0.85);
}

.book-meta {
  display: flex;
  align-items: center;
  gap: 18rpx;
  font-size: 24rpx;
  color: rgba(148, 163, 184, 0.8);
}

.book-domain {
  color: #A5B4FC;
}

.book-duration {
  background: rgba(99, 102, 241, 0.2);
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  color: #E0E7FF;
}

.book-experts {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.expert-tag {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(56, 189, 248, 0.2);
  color: #BAE6FD;
  font-size: 22rpx;
}

.book-summary {
  font-size: 24rpx;
  color: rgba(148, 163, 184, 0.9);
  line-height: 1.7;
}

.book-status {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  color: #34D399;
  font-size: 24rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #34D399;
}

.status-text {
  font-weight: 500;
}

.empty-state {
  margin-top: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  text-align: center;
}

.empty-illustration {
  width: 380rpx;
  height: 280rpx;
  border-radius: 32rpx;
  opacity: 0.8;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #F8FAFC;
}

.empty-text {
  font-size: 24rpx;
  color: rgba(148, 163, 184, 0.8);
  line-height: 1.7;
  width: 80%;
}
