.reader-page {
  min-height: 100vh;
  background: linear-gradient(160deg, #0B1220 0%, #1F2937 100%);
  color: #E2E8F0;
  display: flex;
  flex-direction: column;
  padding-bottom: 160rpx;
}

.reader-header {
  padding: 40rpx 36rpx 20rpx;
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.breadcrumb {
  font-size: 26rpx;
  color: rgba(148, 163, 184, 0.8);
}

.reader-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #F8FAFC;
}

.expert-chip {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(99, 102, 241, 0.15);
  color: #E0E7FF;
  font-size: 24rpx;
}

.expert-indicator {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #6366F1;
}

.generate-state {
  margin: 80rpx 40rpx;
  padding: 48rpx;
  background: rgba(30, 41, 59, 0.7);
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  gap: 28rpx;
  align-items: center;
  border: 1rpx solid rgba(99, 102, 241, 0.18);
}

.generate-illustration {
  width: 100%;
  height: 280rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.generate-illustration image {
  width: 100%;
  height: 100%;
}

.generate-text {
  font-size: 28rpx;
  color: rgba(226, 232, 240, 0.9);
  text-align: center;
  line-height: 1.6;
}

.generate-button {
  width: 300rpx;
  height: 80rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #6366F1, #8B5CF6);
  color: #F8FAFC;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 24rpx 48rpx rgba(99, 102, 241, 0.3);
}

.book-viewer {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 36rpx;
  gap: 32rpx;
}

.page-indicator {
  font-size: 24rpx;
  color: rgba(148, 163, 184, 0.9);
}

.page-flip-container {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.page-control {
  width: 80rpx;
  height: 360rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.control-icon {
  font-size: 64rpx;
  color: rgba(148, 163, 184, 0.6);
}

.page-content {
  position: relative;
  flex: 1;
  min-height: 360rpx;
  margin: 0 24rpx;
  padding: 36rpx 32rpx;
  background: linear-gradient(110deg, rgba(15, 23, 42, 0.95), rgba(30, 41, 59, 0.85));
  border-radius: 36rpx;
  border: 1rpx solid rgba(99, 102, 241, 0.15);
  box-shadow: 0 26rpx 60rpx rgba(15, 23, 42, 0.4);
  transform-origin: left center;
  transition: transform 0.32s ease, box-shadow 0.32s ease;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.page-content.turning {
  transform: rotateY(-12deg);
  box-shadow: -20rpx 40rpx 50rpx rgba(15, 23, 42, 0.3);
}

.chapter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #F8FAFC;
}

.chapter-duration {
  align-self: flex-start;
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(56, 189, 248, 0.2);
  color: #BAE6FD;
  font-size: 22rpx;
}

.chapter-points {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
  font-size: 26rpx;
  line-height: 1.7;
  color: rgba(226, 232, 240, 0.9);
}

.point {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.duration-footer {
  padding: 24rpx 36rpx 48rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  text-align: center;
  color: rgba(226, 232, 240, 0.85);
}

.footer-title {
  font-size: 24rpx;
  letter-spacing: 4rpx;
}

.footer-duration {
  font-size: 36rpx;
  font-weight: 600;
  color: #E0E7FF;
}

.footer-note {
  font-size: 24rpx;
  line-height: 1.6;
}
