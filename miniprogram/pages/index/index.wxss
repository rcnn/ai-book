.container {
  min-height: 100vh;
  padding: 56rpx 48rpx;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #1f2937 0%, #312e81 100%);
  color: #e2e8f0;
}

.header {
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 18rpx;
  margin-bottom: 64rpx;
}

.badge-pill {
  align-self: center;
  padding: 12rpx 32rpx;
  border-radius: 999rpx;
  background: rgba(148, 163, 184, 0.18);
  font-size: 22rpx;
  letter-spacing: 2rpx;
  color: rgba(226, 232, 240, 0.9);
}

.title {
  font-size: 52rpx;
  font-weight: 700;
  color: #f8fafc;
  text-shadow: 0 12rpx 32rpx rgba(15, 23, 42, 0.45);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(226, 232, 240, 0.75);
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.info-card {
  background: rgba(15, 23, 42, 0.65);
  padding: 36rpx;
  border-radius: 28rpx;
  border: 1rpx solid rgba(99, 102, 241, 0.2);
  box-shadow: 0 24rpx 64rpx rgba(15, 23, 42, 0.4);
  display: flex;
  flex-direction: column;
  gap: 22rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #f8fafc;
}

.card-row {
  display: flex;
  align-items: center;
  gap: 18rpx;
}

.status-dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #22c55e;
  box-shadow: 0 0 18rpx rgba(34, 197, 94, 0.5);
}

.status-dot.loading {
  animation: pulse 1.2s ease-in-out infinite;
  background: #facc15;
  box-shadow: 0 0 20rpx rgba(250, 204, 21, 0.45);
}

.status-dot.ready {
  background: #34d399;
  box-shadow: 0 0 20rpx rgba(52, 211, 153, 0.45);
}

.openid-label {
  font-size: 26rpx;
  color: rgba(226, 232, 240, 0.82);
}

.openid-value {
  flex: 1;
  font-size: 26rpx;
  color: rgba(226, 232, 240, 0.92);
  font-family: 'Menlo', 'Monaco', monospace;
  word-break: break-all;
}

.card-desc {
  font-size: 24rpx;
  color: rgba(148, 163, 184, 0.7);
  line-height: 1.6;
}

.feature-section {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.section-header {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #f8fafc;
}

.section-subtitle {
  font-size: 26rpx;
  color: rgba(148, 163, 184, 0.75);
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.feature-card {
  position: relative;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 32rpx;
  background: rgba(15, 23, 42, 0.55);
  border-radius: 28rpx;
  border: 1rpx solid rgba(99, 102, 241, 0.15);
  transition: all 0.28s ease;
}

.feature-card::before {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 28rpx;
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.2), rgba(59, 130, 246, 0.15));
  opacity: 0;
  transition: opacity 0.28s ease;
}

.feature-card.active {
  transform: translateY(-12rpx);
  border-color: rgba(99, 102, 241, 0.45);
  box-shadow: 0 28rpx 72rpx rgba(99, 102, 241, 0.38);
}

.feature-card.active::before {
  opacity: 1;
}

.feature-icon {
  font-size: 48rpx;
}

.feature-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.feature-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #f8fafc;
}

.feature-desc {
  font-size: 24rpx;
  color: rgba(148, 163, 184, 0.78);
  line-height: 1.6;
}

.feature-indicator {
  position: relative;
  width: 100%;
  height: 12rpx;
  margin-top: 8rpx;
}

.indicator-track {
  position: absolute;
  inset: 0;
  border-radius: 999rpx;
  background: rgba(148, 163, 184, 0.25);
}

.indicator-thumb {
  position: absolute;
  top: 50%;
  left: 12rpx;
  transform: translateY(-50%);
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: rgba(148, 163, 184, 0.45);
  transition: all 0.28s ease;
  box-shadow: 0 6rpx 20rpx rgba(30, 41, 59, 0.45);
}

.indicator-thumb.on {
  left: calc(100% - 48rpx);
  background: linear-gradient(135deg, #6366f1, #7c3aed);
  box-shadow: 0 12rpx 32rpx rgba(124, 58, 237, 0.4);
}

.cta-card {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.32), rgba(96, 165, 250, 0.22));
  padding: 36rpx;
  border-radius: 28rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  border: 1rpx solid rgba(99, 102, 241, 0.25);
  box-shadow: 0 28rpx 64rpx rgba(30, 64, 175, 0.35);
}

.cta-text {
  font-size: 30rpx;
  line-height: 1.7;
  color: #f0f9ff;
}

.cta-button {
  width: 100%;
  height: 86rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  color: #f8fafc;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 24rpx 48rpx rgba(99, 102, 241, 0.35);
}

.footer {
  text-align: center;
  margin-top: 48rpx;
  padding-top: 32rpx;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.55;
  }
}
