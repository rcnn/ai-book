.preferences-page {
  min-height: 100vh;
  background: #0F172A;
  padding-bottom: 160rpx;
  color: #E2E8F0;
}

.header {
  padding: 64rpx 40rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #F8FAFC;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(148, 163, 184, 0.85);
}

.section {
  padding: 32rpx 40rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.section-header {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #F1F5F9;
}

.section-subtitle {
  font-size: 24rpx;
  color: rgba(148, 163, 184, 0.8);
}

.domain-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.domain-card {
  position: relative;
  border-radius: 28rpx;
  overflow: hidden;
  background: rgba(15, 23, 42, 0.45);
  border: 1rpx solid rgba(71, 85, 105, 0.4);
  box-shadow: 0 18rpx 38rpx rgba(15, 23, 42, 0.35);
  transition: transform 0.25s ease, box-shadow 0.25s ease, border-color 0.25s ease, filter 0.25s ease;
  filter: grayscale(0.25) brightness(0.85) saturate(0.7);
}

.domain-card::before {
  content: '';
  position: absolute;
  inset: 0;
  background: rgba(15, 23, 42, 0.45);
  transition: opacity 0.25s ease;
  opacity: 0.9;
}

.domain-card::after {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(79, 70, 229, 0.55), rgba(6, 182, 212, 0.35));
  opacity: 0;
  transition: opacity 0.25s ease;
}

.domain-card.selected {
  transform: translateY(-24rpx) scale(1.06);
  border-color: rgba(199, 210, 254, 0.95);
  box-shadow: 0 64rpx 120rpx rgba(99, 102, 241, 0.75);
  filter: grayscale(0) brightness(1.05) saturate(1.35);
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.92), rgba(56, 189, 248, 0.88));
}

.domain-card.selected::before {
  opacity: 0;
}

.domain-card.selected::after {
  opacity: 0.45;
}

.domain-gradient {
  position: relative;
  height: 140rpx;
  opacity: 0.45;
  transition: opacity 0.25s ease;
}

.domain-card.selected .domain-gradient {
  opacity: 1;
}

.domain-content {
  position: relative;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  transition: transform 0.25s ease;
}

.domain-name {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(226, 232, 240, 0.88);
  transition: color 0.25s ease;
}

.domain-card.selected .domain-content {
  transform: translateY(-4rpx);
}

.domain-card.selected .domain-name {
  color: #0f172a;
  text-shadow: none;
}

.domain-description {
  font-size: 26rpx;
  color: rgba(148, 163, 184, 0.78);
  line-height: 1.6;
  transition: color 0.25s ease;
}

.domain-card.selected .domain-description {
  color: rgba(15, 23, 42, 0.85);
}

.domain-check,
.expert-check {
  position: absolute;
  top: 18rpx;
  right: 18rpx;
  width: 82rpx;
  height: 82rpx;
  border-radius: 26rpx;
  background: rgba(15, 23, 42, 0.55);
  border: 1rpx solid rgba(71, 85, 105, 0.45);
  box-shadow: 0 20rpx 40rpx rgba(2, 6, 23, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  overflow: hidden;
  backdrop-filter: blur(12rpx);
}

.check-circle {
  position: relative;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(148, 163, 184, 0.48);
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(15, 23, 42, 0.72);
  box-shadow: inset 0 0 0 1rpx rgba(148, 163, 184, 0.22);
  transition: all 0.2s ease;
}

.check-icon {
  position: relative;
  z-index: 2;
  font-size: 32rpx;
  font-weight: 800;
  color: rgba(255, 255, 255, 0.98);
  text-shadow: 0 6rpx 12rpx rgba(15, 23, 42, 0.65);
}

.domain-card.selected .domain-check,
.expert-card.selected .expert-check {
  border-color: rgba(253, 224, 71, 0.95);
  background: linear-gradient(140deg, rgba(59, 130, 246, 0.78), rgba(14, 165, 233, 0.7));
  box-shadow: 0 36rpx 70rpx rgba(56, 189, 248, 0.55);
}

.domain-card.selected .check-circle,
.expert-card.selected .check-circle {
  width: 54rpx;
  height: 54rpx;
  border: 4rpx solid rgba(252, 211, 77, 0.95);
  background: linear-gradient(135deg, rgba(251, 191, 36, 1), rgba(250, 204, 21, 1));
  box-shadow: 0 20rpx 48rpx rgba(251, 191, 36, 0.6);
}

.domain-card.selected .check-circle::after,
.expert-card.selected .check-circle::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: rgba(15, 23, 42, 0.9);
  transform: translate(-50%, -50%);
  box-shadow: inset 0 0 12rpx rgba(15, 23, 42, 0.85);
}


.expert-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.expert-card {
  position: relative;
  display: flex;
  gap: 24rpx;
  padding: 36rpx;
  border-radius: 34rpx;
  border: 1rpx solid rgba(63, 74, 95, 0.55);
  background: rgba(15, 23, 42, 0.68);
  box-shadow: 0 28rpx 56rpx rgba(15, 23, 42, 0.4);
  overflow: hidden;
  transition: transform 0.28s ease, box-shadow 0.28s ease, border-color 0.28s ease, filter 0.28s ease;
  filter: grayscale(0.45) brightness(0.78) saturate(0.55);
}

.expert-card.selected {
  transform: translateY(-30rpx) scale(1.06);
  border-color: rgba(186, 230, 253, 0.98);
  box-shadow: 0 86rpx 140rpx rgba(56, 189, 248, 0.72);
  background: linear-gradient(135deg, rgba(79, 70, 229, 0.78), rgba(6, 182, 212, 0.72));
  filter: grayscale(0) brightness(1.12) saturate(1.55);
}

.expert-card::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 34rpx;
  background: radial-gradient(circle at top left, rgba(59, 130, 246, 0.16), transparent 55%),
    radial-gradient(circle at bottom right, rgba(14, 165, 233, 0.14), transparent 60%);
  opacity: 0;
  transition: opacity 0.28s ease;
}

.expert-card.selected::after {
  opacity: 1;
}

.expert-avatar-wrapper {
  position: relative;
  width: 184rpx;
  height: 184rpx;
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: 0 28rpx 48rpx rgba(2, 6, 23, 0.55);
  filter: grayscale(0.2);
  transition: filter 0.28s ease;
}

.expert-avatar {
  width: 100%;
  height: 100%;
}

.expert-info {
  display: flex;
  flex: 1;
  flex-direction: column;
  gap: 16rpx;
}

.expert-card.selected .expert-name {
  color: #F8FAFC;
  text-shadow: 0 14rpx 34rpx rgba(15, 23, 42, 0.85);
}

.expert-name {
  font-size: 38rpx;
  font-weight: 700;
  color: rgba(226, 232, 240, 0.82);
  transition: color 0.28s ease;
}

.expert-title {
  font-size: 28rpx;
  color: rgba(148, 163, 184, 0.76);
  transition: color 0.28s ease;
}

.expert-expertise {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.expert-tag {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  background: rgba(51, 65, 85, 0.65);
  color: rgba(226, 232, 240, 0.72);
  box-shadow: inset 0 0 0 1rpx rgba(51, 65, 85, 0.65);
  transition: all 0.28s ease;
}

.expert-card.selected .expert-tag {
  background: rgba(56, 189, 248, 0.26);
  color: rgba(241, 245, 249, 0.95);
  box-shadow: inset 0 0 0 1rpx rgba(56, 189, 248, 0.6);
}

.expert-meta {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  color: rgba(148, 163, 184, 0.75);
  transition: color 0.28s ease;
}

.expert-card.selected .expert-meta {
  color: rgba(240, 249, 255, 0.92);
}

.expert-followers {
  font-size: 24rpx;
}

.expert-signature {
  font-size: 24rpx;
  line-height: 1.6;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 28rpx 40rpx 36rpx;
  background: rgba(15, 23, 42, 0.97);
  border-top: 1rpx solid rgba(99, 102, 241, 0.12);
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.selection-summary {
  flex: 1;
  font-size: 26rpx;
  color: rgba(148, 163, 184, 0.9);
}

.primary-button {
  width: 320rpx;
  height: 88rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #6366F1, #8B5CF6);
  color: #F8FAFC;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 22rpx 50rpx rgba(99, 102, 241, 0.35);
}