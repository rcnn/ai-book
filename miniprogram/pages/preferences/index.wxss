.preferences-page {
  min-height: 100vh;
  background: #0F172A;
  padding-bottom: 160rpx;
  color: #E2E8F0;
}

.header {
  padding: 64rpx 40rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #F8FAFC;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(148, 163, 184, 0.85);
}

.section {
  padding: 32rpx 40rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.section-header {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #F1F5F9;
}

.section-subtitle {
  font-size: 24rpx;
  color: rgba(148, 163, 184, 0.8);
}

.domain-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.domain-card {
  position: relative;
  border-radius: 28rpx;
  overflow: hidden;
  background: rgba(15, 23, 42, 0.6);
  border: 1rpx solid rgba(99, 102, 241, 0.12);
  box-shadow: 0 24rpx 48rpx rgba(15, 23, 42, 0.3);
}

.domain-gradient {
  height: 120rpx;
  opacity: 0.6;
}

.domain-content {
  padding: 28rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.domain-name {
  font-size: 30rpx;
  font-weight: 600;
}

.domain-description {
  font-size: 24rpx;
  color: rgba(148, 163, 184, 0.9);
  line-height: 1.6;
}

.domain-check,
.expert-check {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(148, 163, 184, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-circle {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(148, 163, 184, 0.7);
}

.domain-card.selected,
.expert-card.selected {
  border-color: rgba(99, 102, 241, 0.35);
  box-shadow: 0 32rpx 55rpx rgba(99, 102, 241, 0.35);
}

.domain-card.selected .domain-check,
.expert-card.selected .expert-check {
  background: rgba(99, 102, 241, 0.25);
}

.domain-card.selected .check-circle,
.expert-card.selected .check-circle {
  background: #6366F1;
  border-color: transparent;
}

.expert-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.expert-card {
  position: relative;
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  background: rgba(15, 23, 42, 0.6);
  border-radius: 32rpx;
  border: 1rpx solid rgba(99, 102, 241, 0.12);
  box-shadow: 0 20rpx 48rpx rgba(15, 23, 42, 0.25);
}

.expert-avatar-wrapper {
  width: 180rpx;
  height: 180rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.expert-avatar {
  width: 100%;
  height: 100%;
}

.expert-info {
  display: flex;
  flex: 1;
  flex-direction: column;
  gap: 16rpx;
}

.expert-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #F8FAFC;
}

.expert-title {
  font-size: 26rpx;
  color: rgba(148, 163, 184, 0.9);
}

.expert-expertise {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.expert-tag {
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(99, 102, 241, 0.15);
  color: #C7D2FE;
  font-size: 22rpx;
}

.expert-meta {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  color: rgba(148, 163, 184, 0.85);
}

.expert-followers {
  font-size: 24rpx;
}

.expert-signature {
  font-size: 24rpx;
  line-height: 1.6;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 28rpx 40rpx 36rpx;
  background: rgba(15, 23, 42, 0.97);
  border-top: 1rpx solid rgba(99, 102, 241, 0.12);
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.selection-summary {
  flex: 1;
  font-size: 26rpx;
  color: rgba(148, 163, 184, 0.9);
}

.primary-button {
  width: 320rpx;
  height: 88rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #6366F1, #8B5CF6);
  color: #F8FAFC;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 22rpx 50rpx rgba(99, 102, 241, 0.35);
}